{
  "name": "nodecg-toaster",
  "version": "0.1.0",
  "description": "A rotating list of social/contact information for your stream",
  "homepage": "https://thedingstroders.com",
  "author": {
    "name": "David Thomas",
    "email": "dev@synth3.tk",
    "url": "https://synth3.tk"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack --config ./webpack.js",
    "pretest": "eslint --ignore-path .gitignore ."
  },
  "files": [
    "dashboard",
    "graphics",
    "extension.js",
    "extension"
  ],
  "keywords": [
    "nodecg",
    "nodecg-bundle"
  ],
  "nodecg": {
    "assetCategories": [
      {
        "name": "toasticons",
        "title": "Toast Icons",
        "allowedTypes": [
          "jpg",
          "jpeg",
          "gif",
          "png"
        ]
      }
    ],
    "compatibleRange": "^1.6.0",
    "dashboardPanels": [
      {
        "name": "toaster-config",
        "title": "Toaster Config",
        "width": 6,
        "file": "toaster-config.html",
        "headerColor": "#525F78",
        "workspace": "Setup"
      }
    ]
  },
  "license": "MIT",
  "engines": {
    "yarn": ">= 1.0.0"
  },
  "dependencies": {
    "@bower_components/vue": "vuejs/vue#^2.6.12",
    "@fortawesome/fontawesome-free": "^5.15.1",
    "cross-env": "^7.0.2",
    "css-loader": "^5.0.1",
    "eslint": "^7.13.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-vue": "^7.1.0",
    "html-webpack-plugin": "^4.5.0",
    "style-loader": "^2.0.0",
    "vue": "^2.6.12",
    "vue-loader": "^15.9.5",
    "vue-material": "^1.0.0-beta-15",
    "vue-template-compiler": "^2.6.12",
    "vuetify": "^2.3.16",
    "webpack": "^5.4.0",
    "webpack-cli": "^4.2.0"
  }
}
